<Page class = "info_page" xmlns="http://schemas.nativescript.org/tns.xsd" >
  <Page.actionBar>
  	  <ActionBar title="{{ app_title }}"></ActionBar>
	</Page.actionBar>
    <ScrollView  class = "addform">
      <StackLayout class="p-4">
        <Label text="Title:" style = "color:black;"/>
        <TextField id="title" hint="Enter title here" style = "color:black;"/>
        <Label text="Description:" style = "color:black;"/>
        <TextField id="description" hint="Enter description here" />
        <Label text="Image URL:" style = "color:black;"/>
        <TextField id="image" hint="Enter image URL here" />
        <Button text="Add" class="btnadd" tap="addnew" style = "color:white;"/>        
      </StackLayout>
    </ScrollView>
