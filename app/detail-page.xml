<Page class = "detail_page" xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingToDetail">
  <Page.actionBar>
  	  <ActionBar title="{{ title_photo }}">
			<ActionBar.actionItems>
        <ActionItem tap="settings" ios.position="right" android.position="actionBar">
          <ActionItem.actionView>
            <Label class="btn_setting" text="" backgroundImage ="~/images/ic_settings.png" backgroundSize="cover" backgroundRepeat="no-repeat" tap="showSettingView"></Label>
          </ActionItem.actionView>
        </ActionItem>
			</ActionBar.actionItems>
		</ActionBar>
	</Page.actionBar> 
  <ScrollView>
      <StackLayout class="p-4">
        <Label text="tin tá»©c" class="text-3xl text-center"/>
        <Image src="{{ source_photo}}" class="news_detail_image" id="source"/>
        <TextView text = "{{ title_photo }}" class= "news_detail_title" id="title_photo"/>      
        <TextView text = "{{ description_photo }}" class="news_description" textWrap="true" id="description"/>
        <Button text="Edit" class="btnedit" tap="showEditView" />      
        <Button text="Delete" class="btndelete" tap="DeleteF" /> 
          
      </StackLayout>
    </ScrollView>
</Page>