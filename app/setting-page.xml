<Page class = "detail_page" xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingToSetting">
  <Page.actionBar>
  	  <ActionBar title="{{ title }}">
			<ActionBar.actionItems>
                <ActionItem tap="onSave" ios.position="right" android.position="actionBar">
                    <ActionItem.actionView>
                        <Label class="btn_save" text="Save" tap="onSave"></Label>
                    </ActionItem.actionView>
                </ActionItem>
			</ActionBar.actionItems>
		</ActionBar>
	</Page.actionBar> 
    <ScrollView>
        <StackLayout>
            <Label text="Dark mode" class="dark_mode_label"></Label>
            <Switch checked="{{ isDarkMode }}" checkedChange="onCheckChange" isEnabled="true" class="dark_mode_switch" id="switch" color="yellow" backgroundColor="green" offBackgroundColor="red"></Switch>
            <Label text = "{{ value }}" class="dark_mode_value"></Label>
        </StackLayout>
    </ScrollView>
</Page> 