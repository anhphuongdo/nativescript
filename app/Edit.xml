<Page class = "edit_page" xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="Editview" >
    <Page.actionBar>
          <ActionBar title="{{ app_title }}"></ActionBar>
      </Page.actionBar>
      <ScrollView  class = "editform">
        <StackLayout class="p-4">
                <Label text="Title:"/>
                <TextField id="titleEdit" hint="Enter title here" textWrap="true"/>
                <Label text="Description:" />
                <TextField id="descriptionEdit" hint="Enter description here" textWrap="true"/>
                <Label text="Image URL:" />
                <TextField id="imageEdit" hint="Enter image URL here" textWrap="true"/>
                <Button text="Edit" class="edit_btn" tap="Editbtn" />        
        </StackLayout>
      </ScrollView>
